{#
	if useGlobal bool = true
		set heading = globalHeading
	else
		set from post
 #}

<div class="green__contact">
	<div class="green__contact__inner">
		<div class="green__contact__inner__text">
			<h2>{{post.get_field('contact_heading')}}</h2>
			<p>{{post.get_field('contact_text')}}</p>
		</div>

		<div class="green__contact__inner__form">
			{% if options.form_shortcode %}
				{{ options.form_shortcode|shortcodes }}
			{% endif %}
		</div>
	</div>
</div>
