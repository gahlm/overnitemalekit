{% extends "base.twig" %}

{% block content %}
	<div class="history__hero">
		<div class="history__inner">

			<h1>{{ post.get_field('headline') }}</h1>


			<Section class="timeline-slider">
				{% for post in history %}
					<div class="timeline-slide next_slide">
						<div class="timeline-upper">
							<div class="timeline-upper__inner">
								<article>
									<a href="{{ post.link }}">
										<h2 id="year">{{post.Year}}</h2>
										<h2>
											-
											{{ post.title }}</h2>
									</a>
									<p>{{post.description}}</p>

								</article>
								<img src="{{ Image(post.meta('image')).src }}" alt="">
							</div>
						</div>
						<div class="timeline-lower">
							<div class="timeline-lower__inner">
								<article>
									<h2 id="year">{{post.Year}}</h2>
									<h3>{{post.title}}</h3>
									<p>{{post.description}}</p>
								</article>
							</div>
						</div>
					</div>


				{% endfor %}
			</Section>
		</div>


		<div class="wavecontainer">
			<div class="dotcontainer">

				<i class="fas fa-circle dot" id="dot1"></i>
				<i class="fas fa-circle dot" id="dot2">

					<div class="vl"></div>
				</i>
				<i class="fas fa-circle dot" id="dot3"></i>
			</div>
			<div class="wave" id="wave"></div>
		</div>

		<button class="prev">
			<i class="fas fa-chevron-left"></i>
		</button>


		<button class="next">
			<i class="fas fa-chevron-right"></i>
		</button>


	</div>
	<div class="history__contact">
		<div class="history__contact__inner">

			<div class="history__contact__inner__text">


				<h2>
					{{post.get_field('contact_heading')}}

				</h2>
				<p>{{post.get_field('contact_text')}}</p>

			</div>
			<div class="history__contact__inner__form">

				{% if post.form %}
					{{ post.form|shortcodes }}
				{% endif %}
			</div>
		</div>

	</div>


{% endblock %}
