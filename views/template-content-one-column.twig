{% extends "base.twig" %}

{% block content %}
	<div class="one_column">
		<h1>{{post.meta('headline')}}</h1>
		<div class="one_column_flexible_content">
			{% for i in post.get_field('one_column') %}
				<div class="one_column_row">
					{% if i.subheading %}
						<h3>{{i.subheading}}</h3>
					{% endif %}
					{% if i.image %}
						<img src="{{i.image.url}}" alt="">
					{% endif %}
					{% if i.content_block %}
						<p>{{i.content_block}}</p>
					{% endif %}
					{% if i.file %}
						<button>
							<a href="{{i.file.url}}" download>Download
								{{i.file.title}}</a>
						</button>
					{% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
	{% if post.add_contact_form == 'true' %}
		{% include "templates/contact.twig" %}


	{% endif %}

{% endblock %}
